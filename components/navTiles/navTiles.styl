.nav-tiles
	display block



	&_touch
		& ^[-1]__text-background
			background-position 0 -100px

		& ^[-1]__text
			bottom 0

			+above(size-xs)
				bottom -10%

			+above(size-s)
				bottom 0



	&__list
		display flex
		align-items center
		flex-wrap wrap
		flex-direction row
		justify-content center
		width 100%



	&__item
		overflow hidden
		width 100%
		margin 3px

		&:hover ^[-1]__text-background
			background-position 0 -100px

		&:hover ^[-1]__text
			bottom 0

			+above(size-xs)
				bottom -10%

			+above(size-s)
				bottom 0

		&:hover ^[-1]__title
			text-decoration none

		+above(size-s)
			width calc(100% / 2 - 6px)

		+above(size-m)
			width calc(100% / 3 - 6px)


	&__link
		position relative
		display block
		color #FFFFFF
		text-decoration none



	&__image
		display block
		width 100%
		height 100%



	&__text-background
		position absolute
		top 0
		left 0
		width 100%
		height calc(100% + 100px)
		background linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, .5), rgba(0, 0, 0, .5))
		background-position 0 0
		transition all .4s ease



	&__text
		position absolute
		left 0
		bottom calc(-100% + 56px)
		display flex
		align-items center
		flex-direction column
		width 100%
		height 100%
		padding 5px 10px
		font-size 18px
		text-align center
		text-indent 0
		transition all .4s ease

		+above(size-xs)
			font-size 24px

		+above(size-s)
			bottom calc(-100% + 46px)

		+above(size-s)
			font-size 14px

		+above(size-l)
			font-size 18px



	&__title
		font-size 1.5em
		line-height 50px

		+above(size-s)
			line-height 40px


	&__description
		font-size 1em
		line-height 1.4
