.content
	display block



	&__article
		padding 10px 5px 0
		color #000000
		flex-grow 2
		flex-basis 0



	&__article-header
		position relative
		font-size 16px



	&__article-image
		display none
		float left
		width 300px

		+above(size-m)
			display block



	&__article-title
		position relative
		z-index 1
		padding-top 35px
		color #6600cc
		font-family woodrow
		font-size 2.1em
		line-height 1.4



	&__article-description
		position relative
		z-index 2
		font-family Roboto
		font-size .8em
		font-weight 400
		line-height 15px
		text-align justify

		p
			margin 15px 0
